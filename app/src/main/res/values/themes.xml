<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.VoltCheck" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_light</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/cyan_bright</item>
        <item name="colorSecondaryVariant">@color/cyan_light</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="backgroundColor">@color/background_light</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/gray_text</item>
    </style>

    <!-- Purple Switch Theme -->
    <style name="PurpleSwitchTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlActivated">@color/purple_primary</item>
        <item name="colorSwitchThumbNormal">@color/gray_light</item>
        <item name="android:colorForeground">@color/purple_primary</item>
    </style>
</resources>
