<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Low Current Threshold -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/low_current_threshold"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCurrentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="500 mA"
        android:textColor="@color/accent_yellow"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderLowCurrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="100"
        android:valueTo="2000"
        android:stepSize="50"
        android:value="500" />

    <!-- High Temperature Threshold -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/high_temp_threshold"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTempValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="45Â°C"
        android:textColor="@color/error"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderHighTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="35"
        android:valueTo="60"
        android:stepSize="1"
        android:value="45" />

    <!-- Stability Threshold -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/stability_threshold"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvStabilityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="80%"
        android:textColor="@color/accent_green"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderStability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="50"
        android:valueTo="100"
        android:stepSize="5"
        android:value="80" />

</LinearLayout>
