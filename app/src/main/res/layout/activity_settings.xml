<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/surface_light"
        android:elevation="2dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="VoltCheck Settings"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GENERAL Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GENERAL"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:paddingStart="4dp"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_marginBottom="24dp">

                <!-- Dark Mode -->
                <LinearLayout
                    android:id="@+id/itemDarkMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_dark_mode"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dark Mode"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/PurpleSwitchTheme" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Language -->
                <LinearLayout
                    android:id="@+id/itemLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_language"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Language"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/tvLanguageValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/gray_text" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Refresh Interval (Added) -->
                <LinearLayout
                    android:id="@+id/itemRefreshInterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_refresh"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Refresh Interval"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/tvRefreshIntervalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1s"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/gray_text" />
                </LinearLayout>
            </LinearLayout>

            <!-- NOTIFICATIONS Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOTIFICATIONS"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:paddingStart="4dp"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_marginBottom="24dp">

                <!-- Show Notifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Show Notifications"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchShowNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:theme="@style/PurpleSwitchTheme" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Battery Full Alert -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_battery_alert"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Battery Full Alert"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchBatteryFull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/PurpleSwitchTheme" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Battery Low Alert -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_battery_low"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Battery Low Alert"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchSlowCharging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:theme="@style/PurpleSwitchTheme" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Fast Charging Alert (Added) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_capacity"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fast Charging Alert"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchFastCharging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:theme="@style/PurpleSwitchTheme" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Temperature Alert (Added) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_temperature"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Temperature Alert"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:theme="@style/PurpleSwitchTheme" />
                </LinearLayout>
            </LinearLayout>

            <!-- ALARM Section (Added) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ALARM"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:paddingStart="4dp"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <!-- Full Charge Alarm -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_battery_alert"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Full Charge Alarm"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchFullChargeAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/PurpleSwitchTheme" />
                </LinearLayout>

                <!-- Alarm Level Slider -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarm Level"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderAlarmLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="50"
                    android:valueTo="100"
                    android:value="100"
                    android:stepSize="5"
                    app:thumbColor="@color/purple_primary"
                    app:trackColorActive="@color/purple_primary"
                    app:trackColorInactive="@color/gray_light" />

                <TextView
                    android:id="@+id/tvAlarmLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alert at 100%"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- BATTERY INFO Section (Added) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BATTERY INFO"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:paddingStart="4dp"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_marginBottom="24dp">

                <!-- Show Time to Full -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clear_history"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Show Time to Full"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchShowTimeToFull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/PurpleSwitchTheme" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Design Capacity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_capacity"
                            android:tint="@color/purple_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Design Capacity (mAh)"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etDesignCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="40dp"
                        android:hint="4500"
                        android:inputType="number"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- MEASUREMENT Section (Added) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MEASUREMENT"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:paddingStart="4dp"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_marginBottom="24dp">

                <!-- Units -->
                <LinearLayout
                    android:id="@+id/itemUnits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_voltage"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Units"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/tvUnitsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mA"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/gray_text" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Decimal Precision -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Decimal Precision"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchDecimalPrecision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:theme="@style/PurpleSwitchTheme" />
                </LinearLayout>
            </LinearLayout>

            <!-- DATA & PERMISSIONS Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATA &amp; PERMISSIONS"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:paddingStart="4dp"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_marginBottom="24dp">

                <!-- Clear History -->
                <LinearLayout
                    android:id="@+id/itemClearHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clear_history"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Clear History"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/gray_text" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- App Permissions -->
                <LinearLayout
                    android:id="@+id/itemAppPermissions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_permissions"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="App Permissions"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/gray_text" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Export Data (Added) -->
                <LinearLayout
                    android:id="@+id/btnExportData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_document"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Export Data"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/gray_text" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Background Service (Added) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Background Service"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchBackgroundService"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/PurpleSwitchTheme" />
                </LinearLayout>
            </LinearLayout>

            <!-- ABOUT Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABOUT"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:paddingStart="4dp"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_marginBottom="24dp">

                <!-- Version -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Version"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/tvAppVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2.3"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Terms of Service -->
                <LinearLayout
                    android:id="@+id/itemTermsOfService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_document"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Terms of Service"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/gray_text" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- Privacy Policy -->
                <LinearLayout
                    android:id="@+id/btnPrivacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_privacy"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Privacy Policy"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/gray_text" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_divider"
                    android:layout_marginStart="56dp" />

                <!-- About Developer -->
                <LinearLayout
                    android:id="@+id/btnAboutDeveloper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_developer"
                        android:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="About Developer"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/gray_text" />
                </LinearLayout>
            </LinearLayout>

            <!-- Hidden spinners for compatibility -->
            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinnerTheme"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinnerRefreshInterval"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinnerUnits"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchSessionSummary"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnBatteryOptimization"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnChangeLog"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDeveloper"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
